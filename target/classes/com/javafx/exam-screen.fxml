<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.controller.ExamController">
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="KOLOKVIJI - Pretraživanje">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Label>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Kolegij">
                            <GridPane.margin>
                                <Insets left="10.0" />
                            </GridPane.margin>
                        </Label>
                        <Label text="Trajanje (min)" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets left="10.0" />
                            </GridPane.margin>
                        </Label>
                        <Label text="Mjesto" GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets left="10.0" />
                            </GridPane.margin>
                        </Label>
                        <TextField fx:id="location" GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets bottom="20.0" left="60.0" right="20.0" top="20.0" />
                            </GridPane.margin>
                        </TextField>
                        <TextField fx:id="duration" prefHeight="25.0" prefWidth="1450.0" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets bottom="20.0" left="90.0" right="20.0" top="20.0" />
                            </GridPane.margin>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#onSearch" text="Pretraži" GridPane.rowIndex="2">
                            <GridPane.margin>
                                <Insets bottom="25.0" left="225.0" top="25.0" />
                            </GridPane.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onClear" text="Očisti" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <GridPane.margin>
                                <Insets bottom="25.0" left="225.0" top="25.0" />
                            </GridPane.margin>
                        </Button>
                  <ComboBox fx:id="subject" prefWidth="150.0">
                     <GridPane.margin>
                        <Insets left="50.0" />
                     </GridPane.margin>
                  </ComboBox>
                    </children>
                </GridPane>
                <TableView prefHeight="200.0" prefWidth="200.0">
                    <columns>
                        <TableColumn prefWidth="341.3333333333333" text="Kolegij" />
                        <TableColumn prefWidth="341.3333333333333" text="Trajanje (min)" />
                        <TableColumn prefWidth="341.3333333333333" text="Mjesto" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
